<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox id="topPanel" prefHeight="-1.0" prefWidth="-1.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="prog2.config.AboutThreePartCompanion">
    <ImageView fitHeight="0.0" fitWidth="0.0" pickOnBounds="true" preserveRatio="true">
        <Image url="@../images/ugentlogo.png"/>
    </ImageView>
    <VBox id="rightPanel">
        <Label id="title" text="MyApp"/>
        <Label fx:id="version" text="Versie &lt;ver&gt;"/>
        <Label id="caption" text="Uw systeemadministrator is"/>
        <Label fx:id="email" text="&lt;email&gt;"/>
    </VBox>
</HBox>
